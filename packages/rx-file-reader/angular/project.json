{
  "name": "rx-file-reader-angular",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/rx-file-reader/angular/src",
  "prefix": "rx-file-reader",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/rx-file-reader/angular/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/rx-file-reader/angular/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/rx-file-reader/angular/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/rx-file-reader/angular/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/rx-file-reader/angular/**/*.ts",
          "packages/rx-file-reader/angular/**/*.html"
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "postTargets": ["angular:github"],
        "noVerify": true,
        "baseBranch": "main",
        "versionTagPrefix": "${target}@",
        "commitMessageFormat": "release(${projectName}): ${version}",
        "push":true
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "publish-angular": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "npm publish dist/libs/angular"
          }
        ]
      },
      "dependsOn": [
        {
          "target": "lint",
          "projects": "self"
        },
        {
          "target": "test",
          "projects": "self"
        },
        {
          "target": "version",
          "projects": "self"
        },
        {
          "target": "build",
          "projects": "self"
        }
      ]
    }
  }
}
